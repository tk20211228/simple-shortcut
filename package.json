{
  "name": "simple-shortcut",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "next:dev": "next dev --turbopack",
    "next:build": "next build",
    "next:start": "next start",
    "lint": "next lint",
    "electron:build": "tsup",
    "electron:build:watch": "tsup --watch",
    "electron:dev": "cross-env NODE_ENV=development nodemon --exec electron dist/main.js",
    "dev": "npm-run-all --parallel next:dev electron:build:watch electron:dev",
    "build": "npm-run-all next:build electron:build",
    "dist": "npm-run-all build && electron-builder --dir",
    "dist:all": "npm-run-all build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "get-port-please": "^3.1.2",
    "lucide-react": "^0.522.0",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.58.1",
    "swr": "^2.3.3",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4",
    "tsup": "^8.5.0",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5"
  }
}
